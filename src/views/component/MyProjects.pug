section#Projects(class='pt-20 pb-12 lg:pt-[120px] lg:pb-[90px] px-24')
  .container.mx-auto
  .-mx-4.flex.flex-wrap
    .w-full.px-4
      .mx-auto.text-center(class='mb-[60px] max-w-[510px]')
        h2.text-gray-800.mb-3.text-3xl.font-bold(class='leading-[1.208] sm:text-4xl md:text-[40px]')
          | My Recent Projects
        p.text-gray-600.text-base
          | here are some of the projects I've been successfully working on lately
        if user
          include /component/modals/add.project.pug
  div(class='flex flex-wrap max-w-4xl -mx-4')
    each project in projects
      .w-full.px-4(class='md:w-1/2 xl:w-1/3')
        .relative.mb-12
          .overflow-hidden(class='rounded-[10px]')
            img.w-full(src=project.img alt=project.title)
          .relative.z-10.mx-7.-mt-20.rounded-lg.bg-white.px-3.text-center.shadow-lg(class='dark:bg-dark-2 py-[34px]')
            //- span.text-gray-700.mb-2.block.text-sm.font-medium= project.
            a.text-gray-800.mb-5.text-xl.font-bold(href=project.uri)= project.title
            p.inline-block.px-7.text-sm.font-medium.transition= project.description
            if user
              div.flex
                include /component/modals/edit.project.pug
                form(action=`/project/${project._id.toString()}?_method=DELETE` method='post')
                  button.block.text-white.bg-green-600.font-medium.mx-auto.rounded-lg.text-sm.px-5.text-center.w-3xl(type='submit' class='hover:bg-green-800 focus:ring-4 focus:outline-none focus:ring-green-300 py-2.5') Delete
